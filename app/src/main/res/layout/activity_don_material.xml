<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".AboutUs">

        <!-- TODO: Update blank fragment layout -->
        <ViewFlipper
            android:id="@+id/ViewPage1"
            android:layout_width="420dp"
            android:layout_height="300dp"
            android:flipInterval="2000"
            android:autoStart="true"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            >

            <ImageView
                android:layout_width="420dp"
                android:layout_height="300dp"
                android:src="@drawable/service"/>
            <ImageView
                android:layout_width="420dp"
                android:layout_height="300dp"
                android:src="@drawable/service3"/>
            <ImageView
                android:layout_width="420dp"
                android:layout_height="300dp"
                android:src="@drawable/service2"/>


        </ViewFlipper>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Devenez supporteur !"
            android:textColor="#D2236781"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:text="Vous pouvez désormais devenir l'un des supporters de FloraDon en faisant un don pour soutenir nos différents projets.Ensemble, nous pouvons lutter contre la menace de la désertification et offrir à nos voisins un modèle vivant d'agriculture durable et rentable."
            android:textColor="#000000"
            android:textSize="14sp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="190dp">
                <ImageView
                    android:id="@+id/don"
                    android:layout_width="450dp"
                    android:layout_height="150dp"
                    android:src="@drawable/money" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginBottom="3dp"
                    android:text="faire un don d'argent    "
                    android:textColor="#000000"
                    android:textSize="20sp"></TextView>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="190dp">
            <ImageView
                android:id="@+id/don1"
                android:layout_width="450dp"
                android:layout_height="150dp"
                android:src="@drawable/materiel" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="3dp"
                android:text="faire un don materiel    "
                android:textColor="#000000"
                android:textSize="20sp"></TextView>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>
